<config>
    <sections>
        <foomanjirafe>
            <label>Jirafe Analytics</label>
            <tab>general</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>700</sort_order>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <isActive translate="label">
                            <label>Active</label>
                            <comment></comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment><![CDATA[
                            Please ensure you have configured a cronjob for Magento - <a href="http://www.magentocommerce.com/wiki/1_-_installation_and_configuration/how_to_setup_a_cron_job">read more.</a>
                            ]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </isActive>
                        <reportType translate="label">
                            <label>Report Type</label>
                            <comment></comment>
                            <source_model>foomanjirafe/system_config_source_reporttype</source_model>
                            <comment><![CDATA[
                            Detailed reports add additional fields, like gross sales, refunds, and discounts to the email
                            ]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reportType>
                        <display_dashboard>
                            <label>Display Jirafe Analytics in Dashboard</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </display_dashboard>
                        <emails translate="label">
                            <label>Emails</label>
                            <comment>Email addresses you want Jirafe to send the reports to (separate multiple emails with a comma ,)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emails>
                    </fields>
                </settings>
            </groups>
        </foomanjirafe>
    </sections>
</config>
